@{
    Layout = "~/Views/Shared/_Layout.cshtml";
}

<link rel="stylesheet" href="styles.css">
<div class="container">
    <div class="text-center">
        <img src="https://nubip.edu.ua/sites/all/themes/nauu/images/redesign2/nubip-logo-gerb.png?20022021" alt="НУБіП" class="logo">
        <h1><b>Авторизація для працівників</b></h1>
    </div>
    <div class="col-md-6 offset-md-3" style="margin-top: 20px; align-content: center;">
        @if (ViewBag.AuthError != null) {
            <span class="text-danger">@ViewBag.AuthError</span>
        }
        <form asp-action="SignIn" method="post">
            <div class="mb-3">
                <input type="email" required name="email" class="form-control" placeholder="Email">
            </div>
            <div class="mb-3">
                <input type="password" required name="password" class="form-control" placeholder="Password">
            </div>
            <div class="row">
                <div class="col-12 text-center">
                    <button type="submit" class="btn btn-primary btn-block">Sign In</button>
                </div>
            </div>
        </form>
    </div>
</div>
