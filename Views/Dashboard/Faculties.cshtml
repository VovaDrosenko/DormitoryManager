@using Microsoft.AspNetCore.Identity;
@using DormitoryManager.Models.DTO_s.Faculty;
@using DormitoryManager.Models.Entities;
@model List<FacultiesDto>
@inject UserManager<AppUser> UserManager

@{
    var user = await UserManager.GetUserAsync(User);
    var email = await UserManager.GetEmailAsync(user);
}
@{
    <!-- DataTables -->
    <link rel="stylesheet" href="~/assets/plugins/datatables-bs4/css/dataTables.bootstrap4.min.css">
    <link rel="stylesheet" href="~/assets/plugins/datatables-responsive/css/responsive.bootstrap4.min.css">
    <link rel="stylesheet" href="~/assets/plugins/datatables-buttons/css/buttons.bootstrap4.min.css">
}

<p>
    <a asp-action="CreateFaculty">Create New</a>
</p>

<div class="content-wrapper">
    <section class="content">
        <div class="container-fluid">
            <div class="row">
                <div class="col-12">
                    <div class="card">
                        <div class="card-header">
                            <h3 class="card-title">Факультети</h3>
                        </div>

                        <div class="card-body">
                            <table id="example2" class="table table-bordered table-hover">
                                <thead>
                                    <tr>
                                        <th>Назва</th>
                                        <th>Адреса</th>
                                            <th>Дія</th>
                                    </tr>
                                </thead>
                                <tbody>
                                    @foreach (var item in Model) 
                                    {
                                        <tr>
                                            <td>
                                                @item.FacultyName
                                            </td>
                                            <td>
                                                @item.FacultyAddress
                                            </td>
                                            <td>
                                                <a asp-controller="Dashboard" asp-action="Edit" asp-route-id="@item.Id" class="btn btn-block btn-warning btn-sm">Редагувати</a>
                                                <a asp-controller="Dashboard" asp-action="Create" asp-route-id="@item.Id" class="btn btn-block btn-info btn-sm">Переглянути</a>
                                                <a asp-controller="Dashboard" asp-action="DeleteFaculty" asp-route-id="@item.Id" class="btn btn-block btn-danger btn-sm">Видалити</a></td>

                                        </tr>
                                }
                                </tbody>
                            </table>
                        </div>

                    </div>
                </div>
            </div>
        </div>
    </section>
</div>

<table class="table">
   
    <tbody>

    </tbody>
</table>
