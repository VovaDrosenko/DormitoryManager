@using DormitoryManager.ViewModel
@using Microsoft.AspNetCore.Identity;
@using DormitoryManager.Models.Entities;
@using DormitoryManager.Models.DTO_s.User;
@model UserViewModel
@inject UserManager<AppUser> UserManager

@{
    var user = await UserManager.GetUserAsync(User);
}
<!-- Content Wrapper. Contains page content -->
<div class="content-wrapper">
    <!-- Content Header (Page header) -->
    <section class="content-header">
        <div class="container-fluid">
            <div class="row mb-2">
                <div class="col-sm-6">
                    <h1>Управління користувачами</h1>
                </div>
                <div class="col-sm-6">
                    <ol class="breadcrumb float-sm-right">
                        <li class="breadcrumb-item"><a asp-action="Index">Home</a></li>
                        <li class="breadcrumb-item active">Create user</li>
                    </ol>
                </div>
            </div>
        </div><!-- /.container-fluid -->
    </section>

    <!-- Main content -->
    <section class="content">
        <div class="container-fluid">
            <!-- SELECT2 EXAMPLE -->
            <div class="card card-default">
                <div class="card-header">
                    <h3 class="card-title">Створити користувача</h3>

                    <div class="card-tools">
                        <button type="button" class="btn btn-tool" data-card-widget="collapse">
                            <i class="fas fa-minus"></i>
                        </button>
                        <button type="button" class="btn btn-tool" data-card-widget="remove">
                            <i class="fas fa-times"></i>
                        </button>
                    </div>
                </div>
                <!-- /.card-header -->
                <div class="card-body">
                    <div class="row">
                        <div class="col-md-5 offset-3">
                            <div class="card card-primary">
                                <div class="card-header">
                                    <h3 class="card-title">New user</h3>
                                </div>
                                <!-- /.card-header -->
                                <!-- form start -->
                                @if (@ViewBag.AuthError != null) {
                                    <span class="text-danger mt-3">@ViewBag.AuthError</span>
                                }
                                <form method="post" asp-action="Create">
                                    <div class="card-body">
                                        <div class="form-group">
                                            <label for="exampleInputEmail1">Ім'я'</label>
                                            <input asp-for=@Model.user.FirstName type="text"    class="form-control" id="exampleInputEmail1" placeholder="Enter First Name">
                                        </div>
                                        <div class="form-group">
                                            <label for="exampleInputEmail1">Last name</label>
                                            <input asp-for=@Model.user.LastName type="text"  class="form-control" id="exampleInputEmail1" placeholder="Enter Last Name">
                                        </div>
                                        <div class="form-group">
                                            <label for="exampleInputEmail1">Email address</label>
                                            <input asp-for=@Model.user.Email type="email"  class="form-control" id="exampleInputEmail1" placeholder="Enter email">
                                        </div>
                                        <div class="form-group">
                                            <label>Role</label>
                                            <select asp-for=@Model.user.Role id="roleSelect" class="form-control select2"  style="width: 100%;">
                                                <option value="Komendant">Komendant</option>
                                                <option value="Dekanat">Dekanat</option>
                                                <option value="Administrator">Administrator</option>                                                                                            </select>
                                        </div>
                                        <div class="form-group" id="dormitorySelect" hidden="true">
                                            <label>Dormitory</label>
                                            <select asp-for="@Model.user.DormId" class="form-control select2"  style="width: 100%;">
                                                @foreach(var dorm in @Model.dormitory) {
                                                    <option value="@dorm.Id">@dorm.DormNumber</option>
                                                }
                                                @* <!-- Options for dormitories -->
                                                <option value="1">Dormitory 1</option>
                                                <option value="2">Dormitory 2</option>
                                                <option value="3">Dormitory 3</option> *@
                                            </select>
                                        </div>
                                        <div class="form-group" id="facultySelect" hidden="true">
                                            <label>Faculty</label>
                                            <select asp-for=@Model.user.FacultyId class="form-control select2"  style="width: 100%;">
                                                @foreach (var faculty in @Model.faculties) {
                                                    <option value="@faculty.Id">@faculty.FacultyName</option>
                                                }
                                                @* <!-- Options for faculties -->
                                                <option value="1">Faculty 1</option>
                                                <option value="2">Faculty 2</option>
                                                <option value="3">Faculty 3</option> *@
                                            </select>
                                        </div>
                                        <div class="form-group">
                                            <label for="exampleInputPassword1">Password</label>
                                            <input asp-for=@Model.user.Password type="password"  class="form-control" id="exampleInputPassword1" placeholder="Password">
                                        </div>
                                        <div class="form-group">
                                            <label for="exampleInputPassword1">Confirm Password</label>
                                            <input asp-for=@Model.user.ConfirmPassword type="password"  class="form-control" id="exampleInputPassword1" placeholder="Confirm Password">
                                        </div>
                                    </div>
                                    <!-- /.card-body -->
                                    <div class="card-footer">
                                        <button type="submit" class="btn btn-primary">Create</button>
                                    </div>
                                </form>
                            </div>
                        </div>
                    </div>
                </div>
                <!-- /.card -->
            </div>
            <!-- /.row -->
        </div>
        <!-- /.container-fluid -->
    </section>
    <!-- /.content -->
</div>
@section Scripts {
    <script>
        document.addEventListener("DOMContentLoaded", function () {
            const roleSelect = document.getElementById("roleSelect");
            const dormitorySelect = document.getElementById("dormitorySelect");
            const facultySelect = document.getElementById("facultySelect");

            roleSelect.addEventListener("change", function () {
                const selectedRole = this.value;

                dormitorySelect.hidden = true
                facultySelect.hidden = true

                if (selectedRole === "Komendant") {
                    dormitorySelect.hidden = false
                } else if (selectedRole === "Dekanat") {
                    facultySelect.hidden = false
                }
            });

            // Initialize display based on default selected role
            roleSelect.dispatchEvent(new Event("change"));
        });
    </script>
}