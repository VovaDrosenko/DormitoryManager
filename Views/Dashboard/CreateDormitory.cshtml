@model DormitoryManager.Models.DTO_s.Dormitory.DormitoryDto

<h4>Dormitory</h4>
<hr />
<div class="row">
    <div class="col-md-4">
        <form asp-action="CreateDormitory">
            <div asp-validation-summary="ModelOnly" class="text-danger"></div>
            <div class="form-group">

                <label asp-for="DormNumber" class="control-label"></label>
                <div>
                    @if (@ViewBag.NumberError != null) {
                        <span class="text-danger mt-3">@ViewBag.NumberError</span>
                    }
                </div>
                <input asp-for="DormNumber" class="form-control" />
                <span asp-validation-for="DormNumber" class="text-danger"></span>
                
            </div>
            <div class="form-group">
                <label asp-for="Address" class="control-label"></label>
                <div>
                    @if (@ViewBag.AddressError != null) {
                        <span class="text-danger mt-3">@ViewBag.AddressError</span>
                    }
                </div>
                <input asp-for="Address" class="form-control" />
                
            </div>
            <div class="form-group">
                <label asp-for="Floors" class="control-label"></label>
                <div>
                    @if (@ViewBag.FloorsError != null) {
                        <span class="text-danger mt-3">@ViewBag.FloorsError</span>
                    }
                </div>
                <input asp-for="Floors" min="0"  class="form-control" />
                <span asp-validation-for="Floors" class="text-danger"></span>
            </div>
            <div class="form-group" >
                <input style="margin-top: 10px;" type="submit" value="Create" class="btn btn-primary" />
            </div>
        </form>
    </div>
</div>

<div>
    <a asp-action="Dormitories">Назад до списку</a>
</div>

@section Scripts {
    @{
        await Html.RenderPartialAsync("_ValidationScriptsPartial");
    }
   
}


