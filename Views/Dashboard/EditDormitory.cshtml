@model DormitoryManager.Models.Entities.Dormitory

<h4>Редагувати гуртожиток</h4>
<hr />
<div class="row">
    <div class="col-md-4">
        <form asp-action="EditDormitory">
            <div asp-validation-summary="ModelOnly" class="text-danger"></div>
            <input type="hidden" asp-for="Id" />
            <div class="form-group">
                <label asp-for="DormNumber" class="control-label">Номер гуртожитку</label>
                <input asp-for="DormNumber" class="form-control" />
                <span asp-validation-for="DormNumber" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="Address" class="control-label">Адреса гуртожитку</label>
                <input asp-for="Address" class="form-control" />
                <span asp-validation-for="Address" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="Floors" class="control-label">Кількість поверхів</label>
                <input asp-for="Floors" class="form-control" />
                <span asp-validation-for="Floors" class="text-danger"></span>
            </div>
            <div class="form-group">
                <input style="margin: 10px" type="submit" value="Зберегти" class="btn btn-primary" />
            </div>
        </form>
    </div>
</div>

<div>
    <a asp-action="Dormitories">Назад до списку</a>
</div>

@section Scripts {
    @{await Html.RenderPartialAsync("_ValidationScriptsPartial");}
}
