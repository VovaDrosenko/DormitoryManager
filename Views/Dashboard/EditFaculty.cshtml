@model DormitoryManager.Models.Entities.Faculty


<h4>Редагувати факультет</h4>
<hr />
<div class="row">
    <div class="col-md-4">
        <form asp-action="EditFaculty">
            <div asp-validation-summary="ModelOnly" class="text-danger"></div>
            <input type="hidden" asp-for="Id" />
            <div class="form-group">
                <label asp-for="FacultyName" class="control-label">Назва факультету</label>
                <input asp-for="@Model.FacultyName" class="form-control" >
                <span asp-validation-for="FacultyName" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="FacultyAddress" class="control-label">Адреса факультету</label>
                <input asp-for="@Model.FacultyAddress" class="form-control" />
                <span asp-validation-for="FacultyAddress" class="text-danger"></span>
            </div>
            <div  class="form-group">
                <input style="margin-top: 10px" type="submit" value="Зберегти" class="btn btn-primary" />
            </div>
        </form>
    </div>
</div>

<div>
    <a asp-action="Faculties">Назад до списку</a>
</div>

@section Scripts {
    @{await Html.RenderPartialAsync("_ValidationScriptsPartial");}
}
